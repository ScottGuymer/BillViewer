@model BillViewer.Core.Models.View.BroadbandViewModel

@{
    ViewBag.Title = "Sky Broadband";
}

<div class="mdl-card mdl-color--primary-contrast mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">
    <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">@Model.Package</h2>
    </div>

    <div class="mdl-card__supporting-text">
        This is your current Sky Broadband package. It cost you @Model.Total.ToString("C") this month.
    </div>
    <div class="mdl-card__actions">
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
            Go to my account
        </button>
    </div>
</div>
