@model BillViewer.Core.Models.View.TVViewModel

@{
    ViewBag.Title = "Sky Tv";
}

<div class="mdl-grid demo-content">

    <div class="mdl-card mdl-color--primary-contrast mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">
        <div class="mdl-card__title">
            <h2 class="mdl-card__title-text">@Model.Package</h2>
        </div>

        <div class="mdl-card__supporting-text">
            This is your current Sky TV package. If cost you @Model.Total.ToString("C") this month including all rentals.
        </div>
        <div class="mdl-card__actions">
            <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                Go to my account
            </button>
        </div>
    </div>


    <section class="section--center mdl-cell mdl-cell--12-col">
        <div class="mdl-grid">
            <h5>Your Sky Store Rentals</h5>
        </div>
        <div class="mdl-grid">
            @foreach (var rental in Model.Rentals)
            {
                <div class="mdl-card mdl-cell mdl-cell--4-col mdl-shadow--2dp ">
                    <div class="mdl-card__title mdl-card--expand">
                        <h2 class="mdl-card__title-text">@rental.Title</h2>
                    </div>
                    <div class="mdl-card__supporting-text">
                        @rental.Cost.ToString("C")
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <a class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                            More
                        </a>
                    </div>
                </div>
            }
        </div>
    </section>




    <section class="section--center mdl-cell mdl-cell--12-col">
        <div class="mdl-grid">
            <h5>Buy and Keep</h5>
        </div>
        <div class="mdl-grid">
            @foreach (var buy in Model.BuyAndKeep)
            {
                <div class="mdl-card mdl-cell mdl-cell--4-col mdl-shadow--2dp">
                    <div class="mdl-card__title mdl-card--expand">
                        <h2 class="mdl-card__title-text">@buy.Title</h2>
                    </div>
                    <div class="mdl-card__supporting-text">
                        @buy.Cost.ToString("C")
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <a class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                            More
                        </a>
                    </div>
                </div>
            }
        </div>
    </section>
</div>